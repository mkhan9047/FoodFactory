<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".FragmentPackage.HomeFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_margin="8dp"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:textSize="15sp"
                android:layout_height="wrap_content"
                android:text="Featured Food Items"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="See All"
                android:gravity="end"
                android:layout_weight="1"
                />

        </LinearLayout>

        <com.takusemba.multisnaprecyclerview.MultiSnapRecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/feature_food_recyler"
            app:msrv_gravity="center"
            app:msrv_snap_count="1" />


        <LinearLayout
            android:layout_margin="8dp"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:textSize="15sp"
                android:layout_height="wrap_content"
                android:text="Today Special Two Items"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Limited Editions"
                android:gravity="end"
                android:textSize="12sp"
                android:layout_weight="1"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="150dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent">

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    app:cardCornerRadius="5dp"
                    app:cardElevation="5dp"
                    android:layout_height="match_parent">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:layout_width="match_parent"
                            android:scaleType="centerCrop"
                            android:layout_height="match_parent"
                            android:src="@drawable/icecream"
                            />

                      <ImageView
                          android:layout_width="match_parent"
                          android:layout_height="match_parent"
                          android:scaleType="centerCrop"
                          android:alpha=".5"
                          android:src="@drawable/bg_gradient"
                          />

                        <LinearLayout
                            android:layout_gravity="bottom"
                            android:layout_width="match_parent"
                            android:orientation="horizontal"
                            android:layout_marginBottom="8dp"
                            android:layout_marginStart="5dp"
                            android:layout_height="wrap_content">


                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:text="Vanila Icecream"
                                android:layout_weight="1"
                                android:gravity="start"
                                android:textSize="16sp"
                                android:textColor="@color/color_white"
                                />



                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="$200"
                                android:layout_marginEnd="5dp"
                                android:textSize="16sp"
                                android:textColor="@color/color_white"
                                />




                        </LinearLayout>


                    </FrameLayout>


                </android.support.v7.widget.CardView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_marginStart="5dp"
                android:layout_height="match_parent">

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    app:cardCornerRadius="5dp"
                    app:cardElevation="5dp"
                    android:layout_height="match_parent">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:layout_width="match_parent"
                            android:scaleType="centerCrop"
                            android:layout_height="match_parent"
                            android:src="@drawable/choclate_bread"
                            />
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="centerCrop"
                            android:alpha=".5"
                            android:src="@drawable/bg_gradient"
                            />


                        <LinearLayout
                            android:layout_gravity="bottom"
                            android:layout_width="match_parent"
                            android:orientation="horizontal"
                            android:layout_marginBottom="8dp"
                            android:layout_marginStart="5dp"
                            android:layout_height="wrap_content">


                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:text="Chocalate Bread"
                                android:layout_weight="1"
                                android:gravity="start"
                                android:textSize="16sp"
                                android:textColor="@color/color_white"
                                />



                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="$20"
                                android:layout_marginEnd="5dp"
                                android:textSize="16sp"
                                android:textColor="@color/color_white"
                                />




                        </LinearLayout>



                    </FrameLayout>


                </android.support.v7.widget.CardView>

            </LinearLayout>

        </LinearLayout>


        <LinearLayout
            android:layout_margin="8dp"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:textSize="15sp"
                android:layout_height="wrap_content"
                android:text="Recommended Items"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="See All"
                android:gravity="end"
                android:textSize="12sp"
                android:layout_weight="1"
                />

        </LinearLayout>


        <!--start of grid recycler view for showing recommended items-->

        <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:id="@+id/recommended_items_recycler"
            android:layout_height="wrap_content">

        </android.support.v7.widget.RecyclerView>


        <!--end of root layout-->
    </LinearLayout>



</android.support.v4.widget.NestedScrollView>